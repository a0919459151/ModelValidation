@inject ToastrProvider Toastr;

@{
    var (isSuccess, message) = Toastr.GetModelValidatorResult();
}

@if (!string.IsNullOrEmpty(message))
{
    <script>
        $(document).ready(function () {
            var isSuccess = @Html.Raw(Json.Serialize(isSuccess));
            var message = @Html.Raw(Json.Serialize(message));

            if (isSuccess) {
                toastr.success(message);
            } else {
                toastr.error(message);
            }
        });
    </script>
}
